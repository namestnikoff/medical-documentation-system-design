@startuml
!theme plain
title Трассировка требований\nМедицинская информационная система

skinparam component {
  BackgroundColor White
  BorderColor Black
  FontSize 10
  ArrowColor Black
}

skinparam package {
  BackgroundColor<<business>> #E8F4F8
  BackgroundColor<<functional>> #E8F8E8
  BackgroundColor<<nonfunctional>> #FFF8E8
  BorderColor Black
  FontSize 11
  FontStyle bold
}

package "Бизнес-требования\n(Business Requirements)" <<business>> {
  [BR-001:\nАвтоматизация\nдокументооборота] as BR1
  [BR-002:\nСоответствие\nзаконодательству] as BR2
  [BR-003:\nУчет платных\nуслуг] as BR3
  [BR-004:\nМедицинская\nстатистика] as BR4
  [BR-005:\nБезопасность\nПДн] as BR5
}

package "Функциональные требования\n(Functional Requirements)" <<functional>> {
  [FR-001:\nРегистрация\nпациентов] as FR1
  [FR-003:\nВедение\nприемов] as FR3
  [FR-005:\nСоздание\nСЭМД] as FR5
  [FR-006:\nЭлектронная\nподпись] as FR6
  [FR-008:\nИнтеграция\nс ЕГИСЗ] as FR8
  [FR-009:\nПлатные\nуслуги] as FR9
  [FR-011:\nСтатистика\nи отчеты] as FR11
  [FR-013:\nУправление\nпользователями] as FR13
  [FR-016:\nЖурнал\nаудита] as FR16
}

package "Нефункциональные требования\n(Non-functional Requirements)" <<nonfunctional>> {
  [NFR-001:\nПроизводительность\n< 200ms] as NFR1
  [NFR-002:\nДоступность\n≥ 99.9%] as NFR2
  [NFR-003:\nМасштабируемость\n20000 приемов/день] as NFR3
  [NFR-004:\nБезопасность\n152-ФЗ] as NFR4
}

' Связи бизнес-требований с функциональными
BR1 -down-> FR1
BR1 -down-> FR3
BR1 -down-> FR5
BR1 -down-> FR6

BR2 -down-> FR5
BR2 -down-> FR6
BR2 -down-> FR8

BR3 -down-> FR9

BR4 -down-> FR11

BR5 -down-> FR13
BR5 -down-> FR16

' Связи функциональных с нефункциональными
FR1 -down-> NFR1 : поиск
FR3 -down-> NFR1 : создание\nдокумента
FR5 -down-> NFR3 : масштаб
FR8 -down-> NFR2 : надежность
FR13 -down-> NFR4 : доступ
FR16 -down-> NFR4 : аудит

@enduml
